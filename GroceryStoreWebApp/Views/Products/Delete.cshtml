@model GroceryStoreWebApp.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1 class="text-center text-danger">Delete Product</h1>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h3 class="card-title text-center">Are you sure you want to delete this?</h3>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4">Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.name)</dd>

                        <dt class="col-sm-4">Category</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.category)</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.price)</dd>

                        <dt class="col-sm-4">Description</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.description)</dd>
                    </dl>
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="product_id" />
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .container {
            margin-top: 20px;
        }

        .card {
            border-radius: 10px;
            border: none;
            padding: 20px;
        }

        .card-body {
            padding: 30px;
        }

        .card-title {
            font-size: 24px;
            margin-bottom: 20px;
        }

        .row dt {
            font-weight: bold;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
            transition: background-color 0.3s ease;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .btn-secondary {
            background-color: #6c757d;
            border-color: #6c757d;
            transition: background-color 0.3s ease;
        }

            .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }
    </style>
}
